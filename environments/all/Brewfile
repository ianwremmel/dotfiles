# Install useful binaries
cask '1password-cli'
brew 'chamber'
brew 'httpie'
brew 'hub'
# declare heroku-node explicitly so that brew bundle cleanup doesn't error
brew 'heroku-node'
brew 'heroku'
brew 'terraform'
brew 'tflint'
brew 'shellcheck'

# Install (better) language interpreters
brew 'python'
brew 'go'

# Install QuickLook helpers
cask 'qlcolorcode'     # syntax highlighting in preview
cask 'qlstephen'       # preview plaintext files without extension
cask 'qlmarkdown'      # preview markdown files
cask 'quicklook-json'  # preview json files
cask 'quicklook-csv'   # preview csvs
cask 'qlvideo'         # preview more video types

# Install App Store packages
# for some reason, Keynote, Numbers, and Pages insist on being reinstalled on
# every run, so, for the time being, they've been disabled.
# mas 'Keynote', id: 409_183_694
# mas 'Numbers', id: 409_203_825
# mas 'Pages', id: 409_201_541
mas 'Magnet', id: 441_258_766
mas 'Pocket', id: 568_494_494
mas 'Slack', id: 803_453_959

# Install selenium drivers
brew 'geckodriver'
cask 'chromedriver'
# reminder: macOS includes safaridriver

# Install zsh
brew 'zsh'
brew 'zsh-completions'
